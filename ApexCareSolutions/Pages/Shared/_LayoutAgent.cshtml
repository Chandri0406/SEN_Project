<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Top Bar -->
    <header style="background-color: #0044a6; padding: 15px; color: white;">
        <img src="~/images/logo.png" alt="Logo" style="width: 50px; vertical-align: middle;">
        <span style="font-size: 1.5rem; font-weight: bold; margin-left: 15px;">Hello, @ViewData["Username"]</span>
    </header>

    <!-- Main Layout Container -->
    <div style="display: flex; height: calc(100vh - 60px);">
        <!-- Sidebar -->
        <aside style="width: 250px; background-color: #f2f2f2; padding: 20px;">
            <nav>
                <h3 style="color: #000; margin-bottom: 0;">Profile</h3>
                <hr style="border: 1px solid #ffcc00;">
                <ul>
                    <li><a href="#">Profile details</a></li>
                </ul>

                <h3 style="color: #000;">Contracts</h3>
                <hr style="border: 1px solid #ffcc00;">
                <ul>
                    <li><a href="#">Contract Details</a></li>
                    <li><a href="#">Contract History</a></li>
                    <li><a href="#">Manage Contract</a></li>
                </ul>

                <h3 style="color: #000;">Issues</h3>
                <hr style="border: 1px solid #ffcc00;">
                <ul>
                    <li><a href="#">Feedback Survey</a></li>
                    <li><a href="#">Send a Complaint</a></li>
                </ul>

                <a href="/logout" style="color: #0044a6; margin-top: 20px; display: block;">Logout</a>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <main style="flex-grow: 1; padding: 30px; background-color: white;">
            @RenderBody()

            <!-- Edit Profile Button -->
            <button style="background-color: #ffcc00; border: none; padding: 10px 20px; cursor: pointer; float: right;">
                Edit Profile
            </button>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
