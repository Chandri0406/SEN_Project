@page
@model ApexCareSolutions.Pages.createUserModel

<div>
    <form method="post">
        @Html.AntiForgeryToken()

        <div>
            <label >First Name: </label>
            <input type="text" asp-for="clients.FirstName" required />
        </div>

        <div>
            <label >Last Name: </label>
            <input type="text" asp-for="clients.LastName" required />
        </div>

        <div>
            <label >Phone: </label>
            <input type="text" asp-for="clients.Phone" required />
        </div>

        <div>
            <label >Email: </label>
            <input type="email" asp-for="clients.Email" required />
        </div>

        <div>
            <label >Confirm Email: </label>
            <input type="email" asp-for="ConfirmEmail" required />
        </div>

        <div>
            <label >Address: </label>
            <input type="text" asp-for="clients.Address" required />
        </div>

        <div>
            <label>Username: </label>
            <input type="text" asp-for="user.Username" required />
        </div>

        <div>
            <label >Password: </label>
            <input type="password" asp-for="user.Password" required />
        </div>

        <div>
            <label >Confirm Password: </label>
            <input type="password" asp-for="ConfirmPassword" required />
        </div>

        <button type="submit">Sign Up</button>
    </form>
</div>