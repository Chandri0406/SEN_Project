@page
@model ApexCareSolutions.Pages.createUserModel
@{
}

<div>
    <form method="post">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="clients.FirstName">First Name: </label>
            <input type="text" asp-for="clients.FirstName" required />
            <span asp-validation-for="clients.FirstName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="clients.LastName">Last Name: </label>
            <input type="text" asp-for="clients.LastName" required />
            <span asp-validation-for="clients.LastName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="clients.Phone">Phone: </label>
            <input type="text" asp-for="clients.Phone" required />
            <span asp-validation-for="clients.Phone" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="clients.Email">Email: </label>
            <input type="email" asp-for="clients.Email" required />
            <span asp-validation-for="clients.Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ConfirmEmail">Confirm Email: </label>
            <input type="email" asp-for="ConfirmEmail" required />
            @if (!string.IsNullOrEmpty(Model.EmailErrorMessage))
            {
                <span class="text-danger">@Model.EmailErrorMessage</span>
            }
        </div>

        <div>
            <label asp-for="clients.Address">Address: </label>
            <input type="text" asp-for="clients.Address" required />
            <span asp-validation-for="clients.Address" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="user.Username">Username: </label>
            <input type="text" asp-for="user.Username" required />
            <span asp-validation-for="user.Username" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="user.Password">Password: </label>
            <input type="password" asp-for="user.Password" required />
            <span asp-validation-for="user.Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword">Confirm Password: </label>
            <input type="password" asp-for="ConfirmPassword" required />
            @if (!string.IsNullOrEmpty(Model.PasswordErrorMessage))
            {
                <span class="text-danger">@Model.PasswordErrorMessage</span>
            }
        </div>

        <button type="submit">Sign Up</button>
    </form>
</div>
