<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApexCareSolutions</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApexCareSolutions.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div><img /></div>
        <h1></h1>
    </header>

    <div>
        <nav class="navBar">
            <div class="container">
                <a asp-area="" asp-page="/Client/profileClient">ApexCareSolutions</a>
                <button>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    <ul>
                        <li>
                            <a asp-area="" asp-page="/Client/profileClient">Profile</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Client/contractDetails">Contract Details</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Client/contractHistory">Contract History</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Client/manageContract">Manage your contracts</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Client/feedback">Give us Feedback</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Client/complaint">Send a complaint</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ApexCareSolutions - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>