@model IEnumerable<ApexCareSolutions.Models.CallLog>

<h2>Call Logs</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Call Log</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Call ID</th>
            <th>Client ID</th>
            <th>Agent ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var callLog in Model)
        {
            <tr>
                <td>@callLog.CallID</td>
                <td>@callLog.ClientID</td>
                <td>@callLog.AgentID</td>
                <td>@callLog.StartTime</td>
                <td>@callLog.EndTime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@callLog.CallID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@callLog.CallID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
