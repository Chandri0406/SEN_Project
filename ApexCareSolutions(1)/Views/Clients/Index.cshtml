@model IEnumerable<ApexCareSolutions.Models.Clients>

<h2>Clients</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Client ID</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientID</td>
                <td>@client.Username</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Address</td>
                <td>@client.Phone</td>
                <td>@client.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@client.ClientID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@client.ClientID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
